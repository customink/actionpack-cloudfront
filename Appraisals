# We use git repos so we get test directories and their support.

appraise 'rails72' do
  gem 'capybara'
  gem 'puma'
  gem 'selenium-webdriver'
  gem 'rails', git: 'https://github.com/rails/rails.git', branch: '7-2-stable'
end

